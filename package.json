{
  "name": "ssh-backend-connector",
  "version": "0.5.12",
  "author": "Dan Forsberg <dforsber@gmail.com>",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "node": {
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.js"
      },
      "default": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dforsber/ssh-backend-connector.git"
  },
  "standard-version": {
    "scripts": {
      "postbump": "yarn build && git add -f dist/"
    }
  },
  "private": false,
  "scripts": {
    "release": "standard-version -a",
    "all": "yarn format && yarn lint && yarn build && yarn test",
    "lint": "eslint -c eslint.config.cjs src",
    "lint:fix": "eslint -c eslint.config.cjs src --fix",
    "build:esm": "esbuild src/*.ts --bundle --platform=node --format=esm --outdir=dist/esm --external:cpu-features --external:ssh2",
    "build:cjs": "esbuild src/*.ts --bundle --platform=node --format=cjs --outdir=dist/cjs --external:cpu-features --external:ssh2",
    "build:types": "tsc -p tsconfig.types.json",
    "build": "rm -rf dist/ && yarn build:esm && yarn build:cjs && yarn build:types",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "tsc -w",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "ssh2": "^1.16.0",
    "standard-version": "^9.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.9",
    "@types/ssh2": "^1.15.4",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "esbuild": "^0.24.2",
    "esbuild-node-externals": "^1.16.0",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  }
}
